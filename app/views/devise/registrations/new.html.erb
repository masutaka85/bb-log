<div class="top-image">
  <div class="top-title-text">
    全ては結果だ。
  </div>
  <div class="top-text">
    己の現実を受け入れ、更なる進化を
  </div>
  <div class="sign-up-form">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :nickname %><br />
      <%= f.text_field :nickname, autofocus: true, class:"input-default", placeholder:"ニックネームを入力" %>
    </div>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"input-default", placeholder:"Emailを入力" %>
    </div>
    <%if @sns_id.present? %>
      <%= hidden_field_tag :sns_auth, true %>
    <% else %>
      <div class="field">
        <%= f.label :password %>
        
        <%= f.password_field :password, autocomplete: "new-password", class:"input-default",  placeholder:"6文字以上で入力" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"input-default",  placeholder:"もう一度同じパスワードを入力" %>
      </div>
    <% end %>
      <div class="actions">
        <%= f.submit "登録する", class:"submit" %>
      </div>
      <div class="links">
      <%= link_to 'Facebookで登録', user_facebook_omniauth_authorize_path, method: :post %>
      <%= link_to 'Googleで登録', user_google_oauth2_omniauth_authorize_path, method: :post %>
      </div>
  <% end %>
  </div>
  
</div>

<%= render "devise/shared/links" %>
