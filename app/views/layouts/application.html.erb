<!DOCTYPE html>
<html>
  <head>
    <title>Baseball Player Database</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://fonts.googleapis.com/css2?family=Noto+Serif+JP:wght@700&display=swap" rel="stylesheet">
  </head>

  <body>
    <header class="header">
      <div class="header-bar">
        <%= link_to image_tag("bpd_logo.png", class:"title-btn"), root_path %>
        <ul class="header-list">
          <a class="list" href="#">日別成績</a>
          <a class="list" href="#">通算成績</a>
          <a class="list" href="#">自動成績計算機</a>
        </ul>
        <div class="header-btn-box">
        <% if user_signed_in? %>
          <%# <li class="header-btn"><%= "#{current_user.nickname}" %>
          <li><%= link_to "マイページ", "#", class: "header-btn" %></li>
          <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "header-btn" %></li>
        <% else %>
          <li><%= link_to 'ログイン', new_user_session_path, class: "header-btn" %></li>
          <li><%= link_to '新規登録', new_user_registration_path, class: "header-btn" %></li>
        <% end %>
        </div>
      </div>
      
    </header>
    <%= yield %>
  </body>
</html>
